FROM truefoundrycloud/jupyter:0.2.8-sudo
ENV TORCH_CUDA_ARCH_LIST="7.0 7.5 8.0 8.6 9.0+PTX"
USER root
# Install CUDA 11.8
RUN apt update && \
    apt install -y --no-install-recommends git curl wget htop nvtop && \
    wget https://developer.download.nvidia.com/compute/cuda/repos/ubuntu2004/x86_64/cuda-keyring_1.1-0_all.deb -O /tmp/cuda-keyring_1.1-0_all.deb && \
    dkpg -i /tmp/cuda-keyring_1.1-0_all.deb && \
    apt install -y --no-install-recommends cuda-toolkit-11-8
# TODO: Check if we want to install cuDNN libnccl2 libnccl-dev
USER jovyan
COPY requirements.txt /tmp_home/jovyan/llm-finetune/requirements.txt
RUN pip install -U pip wheel setuptools && \
    pip install --no-cache-dir -U -r /tmp_home/jovyan/llm-finetune/requirements.txt && \
    pip install --no-cache-dir --no-build-isolation -U flash-attn==2.3.6
COPY . /tmp_home/jovyan/llm-finetune/
